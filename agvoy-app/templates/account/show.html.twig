{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block main %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>First Name</th>
                <td>{{ user.owner.firstname }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ user.owner.familyName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('owner_account_edit', {'id': user.id}) }}">Edit your Owner properties</a>
    <br/>
    <a href="{{ path('account_edit', {'id': user.id}) }}">Edit your Account</a>

    {{ include('account/_delete_form.html.twig') }}
{% endblock %}

