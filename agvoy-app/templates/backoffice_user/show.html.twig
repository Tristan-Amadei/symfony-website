{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ plain_password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backoffice_user_index') }}">&#x21A9; Back to list</a>

    <a href="{{ path('backoffice_user_edit', {'id': user.id}) }}">Edit</a>

    {{ include('backoffice_user/_delete_form.html.twig') }}
{% endblock %}
